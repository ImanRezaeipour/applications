
$TargetFile = "C:\Program Files (x86)\Google\Chrome\Application\chrome.exe"
$ShortcutFile = "C:\Users\Iman\Desktop\Me0.lnk"
$WScriptShell = New-Object -ComObject WScript.Shell
$Shortcut = $WScriptShell.CreateShortcut($ShortcutFile)
$Shortcut.Arguments = "--app=http://github.com"
$Shortcut.TargetPath = $TargetFile
$Shortcut.IconLocation = "https://www.reddit.com/favicon.ico"
$Shortcut.Save()
